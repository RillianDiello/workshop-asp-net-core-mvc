@model IEnumerable<SalesWebMvc.Models.ViewModels.SellerFormViewModel>

    @{
    ViewData["Title"] = "Create";
    }

    <h2>@ViewData["Title"]</h2>

    <h4>Seeler</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Seeler.Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Seeler.Email" class="control-label"></label>
                    <input asp-for="Seeler.Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Seeler.BirthDate" class="control-label"></label>
                    <input asp-for="Seeler.BirthDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Seeler.BaseSalary" class="control-label"></label>
                    <input asp-for="Seeler.BaseSalary" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Seller.DepartmentId" class="control-label"></label>
                    <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id",
"Name"))" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>

    </div>
